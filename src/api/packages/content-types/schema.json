{
    "kind": "collectionType",
    "collectionName": "packages",
    "info": {
      "singularName": "package",
      "pluralName": "packages",
      "displayName": "Packages",
      "description": "Kurs paketlerini saklar"
    },
    "options": {
      "draftAndPublish": true
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true,
        "unique": true,
        "minLength": 3,
        "maxLength": 50
      },
      "price": {
        "type": "decimal",
        "required": true
      },
      "description": {
        "type": "text",
        "required": false
      },
      "course": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::course.course",
        "inversedBy": "packages"
      }
    }
  }
  